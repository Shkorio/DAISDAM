<Window x:Class="DAISDAM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAISDAM"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="345">
    <Grid>
        <TextBox x:Name="txt_login" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Width="153" Margin="0,170,0,0"/>
        <Label Content="Логин" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="27,166,0,0"/>
        <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="27,0,0,0"/>
        <TextBox x:Name="txt_password" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Width="153" Margin="0,212,0,0"/>
        <Button Content="Войти" Click="Sign" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,272,0,0" Width="80" Height="34"/>
    </Grid>
</Window>
